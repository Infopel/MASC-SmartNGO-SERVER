{
    "exclude": [
        "./node_modules",
        "./dist"
    ],
    "compileOnSave": true,
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames":true,
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "ES2020"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./dist"
    }
}